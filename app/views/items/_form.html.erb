<%= form_for(item) do |f| %>
  <div>
    <%= f.label :name %>:
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :description %>:
    <%= f.text_field :description %>
  </div>

  <div>
    <%= f.label :image %>:
    <%= f.text_field :image %>
  </div>

  <div>
    <%= f.label :price %>:
    <%= f.text_field :price %>
  </div>

  <div>
    <%= f.label :quantity %>:
    <%= f.text_field :quantity %>
  </div>

  <div>
    <% @categories_array = [] %>
    <% categories.each do |category| %>
      <% @categories_array << [category.name, category.id] %>
    <% end %>


    <%= f.label :category_id %>:
    <%= f.select(:category_id, @categories_array,{ :prompt => "Please select"})  %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>

<% @item.errors.each do |error_array, error| %>
  <p><%= flash[:error] = error %><p>
<% end %>